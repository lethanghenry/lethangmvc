@model Basic_level2_agan.Models.Blog
<!DOCTYPE html>
<html>
<head>
    <title>edit blogs</title>
    <style>
     
      
        .form-group
        {
            margin-left:10px;
            margin-right:10px;
           
        }

        .card-body {
            padding-left: 20px;
        }
        .form-control
        {
            max-width:100%;
        }
       
    </style>

</head>
<body>
    @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="background:white;">
        
        <div class="card" style="background:#696969;padding-left:15px;padding-right:15px;">
            <div class="row" style="margin-left:20px;margin-right:10px;padding-top:10px;">
                <div class="card-header col-md-12" style="background:#CCCCCC;">
                    <h3 style="margin:0px!important;padding-right:0px!important;">Edit Blogs</h3>
                </div>
                <div class="card-body col-md-12 "style="background:white;">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.id)
                    <div class="row">
                        <div class="form-group col-md-12">
                            @Html.Label("Tiêu Đề")
                            <br />
                            
                            @Html.TextAreaFor(model => model.tin, new { @class=" form-control"})
                            @Html.ValidationMessageFor(model => model.tin)
                            <br />
                        </div>
                    </div>
                   
                    <div class="row ">
                        <div class="form-group col-md-12">
                            @Html.Label("Mô Tả Ngắn")
                            <br />
                            @Html.TextAreaFor(model=>model.motangan, new { @class = "form-control " })
                            <br />
                        </div>
                    </div>
                 
                    
                    <div class="row">
                        <div class="form-group col-md-12">
                            @Html.Label("Chi Tiết")
                            <br />
                            @Html.TextAreaFor(model=>model.chitiet, new { @class = "form-control" })
                            <br />
                        </div>
                    </div>
                    

                    <div class="row">
                        <div class="form-group col-md-12">
                            @Html.Label("Hình Ảnh")
                            <br />
                            <input type="submit" value="Chọn Tệp" class="btn btn-default" />
                            @Html.Label("Không có tệp nào được chọn")
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            @Html.Label("Public")
                            <br />
                            @Html.RadioButtonFor(model => model.trangThai, "Yes")
                            @Html.Label("Yes")
                            @Html.RadioButtonFor(model => model.trangThai, "No")
                            @Html.Label("No")
                            @Html.ValidationMessageFor(model => model.trangThai)
                            <br />
                        </div>

                       
                    </div>
                   
                    <div class="row">
                        <div class="form-group col-md-12">
                       
                            <input type="checkbox" name="viTri" value="VietNam">Việt Nam
                <input type="checkbox" name="viTri" value="ChauA">Châu Á
                <input type="checkbox" name="viTri" value="ChauAu">Châu Âu
                <input type="checkbox" name="viTri" value="ChauMy">Châu Mỹ
                            <br />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                
                                @Html.LabelFor(model => model.loai)
                                <br />

                                @{
                                    List<SelectListItem> listItems = new List<SelectListItem>();
                                    listItems.Add(new SelectListItem
                                        {
                                          Text = "Kinh Doanh",
                                           Value = "Kinh Doanh"
                                         });
                                     listItems.Add(new SelectListItem
                                          {
                                           Text = "Thế Giới",
                                            Value = "Thế Giới",
                                          Selected = true
                                          });
                                     listItems.Add(new SelectListItem
                                            {
                                             Text = "Thời Sự",
                                              Value = "Thời Sự"
                                              });
                                }

                                @Html.DropDownListFor(model => model.loai, listItems, "-- Select Status --")



                                @Html.ValidationMessageFor(model => model.loai)
                                <br />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ngayPublic)
                                <br />
                                
                                @Html.EditorFor(model => model.ngayPublic, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ngayPublic)
                                <br />
                            </div>
                        </div>
                    </div>

                    
                    
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input style="background:green;color:white;" type="submit" value="Submit" />
                            <input style="background:blue;color:white;" type="reset" value="Clear" />
                        </div>

                    </div>
                </div>
                
                  
            </div>
           
        </div>
    </div>
    
    
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</body>
</html>

